<Window x:Class="PlakietkUJ.PlateEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlakietkUJ"
        mc:Ignorable="d"
        Title="PlateEditorWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Canvas x:Name="BackgroundBox" Grid.Column="0"/>
        <Grid Grid.Column="1" Background="LightGray">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
                
                <ScrollViewer Width="220">
                    <StackPanel x:Name="EditableObjectsPanel">
                        <Button Content="Dodaj PoleTextowe" Click="AddTextField_Click"/>
                        <Button Content="Dodaj ObrazekObrazkowe" Click="AddImageElement_Click"/>
                    </StackPanel>
                </ScrollViewer>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Zapisz" Click="SaveButton_Click" Background="WhiteSmoke" HorizontalAlignment="Left" Margin="5"/>
                <Button Content="Drukuj" Click="PrintButton_Click" Background="WhiteSmoke" HorizontalAlignment="Right" Margin="5"/>
                <Button Content="Wczytaj" Click="LoadButton_Click" Background="WhiteSmoke" Margin="5"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>