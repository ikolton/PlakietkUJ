<Window x:Class="PlakietkUJ.PlateEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlakietkUJ"
        mc:Ignorable="d"
        Title="PlateEditorWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Canvas x:Name="BackgroundBox" Grid.Column="0"/>
        <ScrollViewer Width="200" Background="LightGray" Grid.Column="1">
            <StackPanel x:Name="EditableObjectsPanel">
                <Button Content="Dodaj TextField" Click="AddTextField_Click"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
